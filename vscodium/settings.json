{
	"editor.fontFamily": "'cascadia code pl','Font Awesome 6 Free','font awesome 6 brands','font awesome 6 free solid'",
	"window.zoomLevel": -0.004,
	"editor.fontWeight": "600",

	"clangd.arguments": [
		"--log=error",
		"--j=4",
		"--clang-tidy=false",
		"--background-index=true",
		"--header-insertion=never",
		"--completion-style=detailed",
	],
	
	"clangd.path": "/usr/bin/clangd",
	"clangd.detectExtensionConflicts": false,
	"clangd.serverCompletionRanking": false,

	"editor.fontLigatures": true,
	"editor.cursorSurroundingLines": 13,
	"scm.diffDecorationsGutterVisibility": "always",
	"editor.lineNumbers": "on",
	"editor.cursorStyle": "block",
	"editor.cursorBlinking": "smooth",
	"workbench.editor.highlightModifiedTabs": true,

	"workbench.colorCustomizations": {
		"editor.selectionHighlightBackground": "#440f7571",
		"editor.selectionBackground": "#440f7571",
		"editor.inactiveSelectionBackground": "#121212",
		"editor.selectionHighlightBorder": "#121212",
	},

	"editor.tokenColorCustomizations": {

	"[Hack The Box]": {
		// "comments": "#ffffffff"
	},

	"textMateRules": [
		{
			"scope": [
				"meta",
				"variable",
				"comment",
				"constant",
				"string",
				"punctuation",
				"entity",
				"markup",
				"invalid",
				"storage",
				"support",
				"strong",
				"emphasis",
				"keyword",
			],
			"settings": {
				// "fontStyle": ""
			},

		},
				{
			"scope": [
				"comment",
			],
			"settings": {
				"fontStyle": ""
			},

		},
	]
},
	"editor.quickSuggestionsDelay": 100000,
	"editor.parameterHints.enabled": false,
	"editor.hover.enabled": true,
	"editor.find.cursorMoveOnType": true,
	"explorer.confirmDelete": false,
	"output.smartScroll.enabled": false,
	"workbench.startupEditor": "newUntitledFile",
	"terminal.integrated.enableBell": false,
	"terminal.integrated.cursorBlinking": true,
	"editor.snippetSuggestions": "none",
	"editor.hover.delay": 1000,
	"editor.suggestOnTriggerCharacters": false,
	"workbench.editor.decorations.badges": true,
	"terminal.integrated.tabs.enabled": true,
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"debug.console.fontSize": 18,
	"editor.suggestFontSize": 14,
	"terminal.integrated.fontFamily": "cascadia code",
	"terminal.integrated.fontWeight": 900,
	"terminal.integrated.fontWeightBold": 900,
	"editor.wordBasedSuggestions": false,
	"editor.detectIndentation": true,
	"workbench.tree.indent": 20,
	"security.workspace.trust.untrustedFiles": "open",
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.padding.top": 75,
	"terminal.integrated.fastScrollSensitivity": 0,
	"terminal.integrated.scrollback": 500,
	"editor.scrollBeyondLastLine": false,
	"editor.semanticHighlighting.enabled": true,
	"breadcrumbs.icons": false,
	"editor.scrollbar.horizontalScrollbarSize": 10,
	"editor.scrollbar.verticalScrollbarSize": 0,
	"workbench.editor.wrapTabs": true,
	"problems.showCurrentInStatus": true,
	"search.quickOpen.includeHistory": false,
	"editor.renderControlCharacters": true,
	"editor.minimap.showSlider": "mouseover",
	"editor.minimap.enabled": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.padding.bottom": 225,
	"editor.acceptSuggestionOnEnter": "smart",
	"editor.suggestLineHeight": 30,
	"editor.formatOnSave": false,
	"scm.alwaysShowActions": true,
	"scm.autoReveal": true,
	"scm.defaultViewMode": "tree",
	"scm.diffDecorationsGutterAction": "diff",
	"scm.diffDecorationsGutterWidth": 1,
	"editor.minimap.side": "left",
